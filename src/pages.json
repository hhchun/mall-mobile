{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/index",
      "style": {
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/mine"
    }
  ],
  "subPackages": [
    {
      "root": "platform",
      "pages": [
        {
          "path": "pages/login"
        }
      ]
    },
    {
      "root": "shop",
      "pages": [{ "path": "pages/login" }]
    },
    {
      "root": "customer",
      "pages": [{ "path": "pages/login" }]
    }
  ],
  "tabBar": {
    "color": "#999999",
    "selectedColor": "#000000",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/index",
        "text": "首页"
      },
      {
        "pagePath": "pages/mine",
        "text": "我的"
      }
    ]
  },
  "globalStyle": {
    "navigationBarBackgroundColor": "#bddd22"
  }
}
