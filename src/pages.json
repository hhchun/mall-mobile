{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/index"
    },
    {
      "path": "pages/notice"
    },
    {
      "path": "pages/mine",
      "style": {
        "navigationStyle": "custom",
        "navigationBarTextStyle": "black"
      }
    }
  ],
  "subPackages": [
    {
      "root": "platform",
      "pages": [
        {
          "path": "pages/login/login",
          "style": {
            "navigationStyle": "custom",
            "navigationBarTextStyle": "black"
          }
        },
        {
          "path": "pages/login/password-login",
          "style": {
            "navigationStyle": "custom",
            "navigationBarTextStyle": "black"
          }
        }
      ]
    },
    {
      "root": "shop",
      "pages": [{ "path": "pages/login" }]
    },
    {
      "root": "customer",
      "pages": [{ "path": "pages/login" }]
    }
  ],
  "tabBar": {
    "color": "#000000",
    "selectedColor": "#000000",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/index",
        "text": "首页",
        "iconPath": "static/tabbar/index.png",
        "selectedIconPath": "static/tabbar/index-fill.png"
      },
      {
        "pagePath": "pages/notice",
        "text": "通知",
        "iconPath": "static/tabbar/notice.png",
        "selectedIconPath": "static/tabbar/notice-fill.png"
      },
      {
        "pagePath": "pages/mine",
        "text": "我的",
        "iconPath": "static/tabbar/mine.png",
        "selectedIconPath": "static/tabbar/mine-fill.png"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarBackgroundColor": "#ffffff"
  }
}
